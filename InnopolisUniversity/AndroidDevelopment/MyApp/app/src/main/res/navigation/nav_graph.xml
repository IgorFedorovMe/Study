<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="me.igorfedorov.myapp.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_weatherScreenFragment"
            app:destination="@id/weatherScreenFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsDialogFragment"
            app:destination="@id/settingsDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/weatherScreenFragment"
        android:name="me.igorfedorov.myapp.feature.weather_screen.ui.WeatherScreenFragment"
        android:label="WeatherScreenFragment"
        tools:layout="@layout/fragment_weather_screen">
        <argument
            android:name="cityName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/settingsDialogFragment"
        android:name="me.igorfedorov.myapp.feature.settings_dialog.ui.SettingsDialogFragment"
        android:label="SettingsDialogFragment">
        <action
            android:id="@+id/action_settingsDialogFragment_to_weatherScreenFragment"
            app:destination="@id/weatherScreenFragment" />
    </dialog>

</navigation>